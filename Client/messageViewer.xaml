<Window x:Class="DixitClient.messageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пакеты" Height="300" Width="300" WindowStyle="ToolWindow" Closing="Window_Closing">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Name="buttonSave" VerticalAlignment="Bottom" Content="Сохранить" Click="buttonSave_Click" />
        <ScrollViewer Name="scrollViewer" CanContentScroll="true" DockPanel.Dock="Top">
            <TextBlock HorizontalAlignment="Stretch" Margin="2" Name="log" VerticalAlignment="Stretch" IsManipulationEnabled="True" />
        </ScrollViewer>
       
    </DockPanel>
</Window>
